{{template "base" .}}

{{define "content"}}
<div class="container">
    <div class="row">
        <div class="col">
            <h1>Make Reservation</h1>
            <form action="" method="post" class=" " novalidate>
                <input type="hidden" name="csrf_token" value="{{.CSRFToken}}">
                <!-- <form action="" method="post" class="needs-validation" novalidate> -->
                <h5 class="fw-bold">Reservation Details</h5>
                <div class="form-group mt-3">
                    <label for="first_name">First name:</label>
                    <input type="text" name="first_name" class="form-control" id="first_name" required
                        autocomplete="off">
                </div>

                <div class="form-group mt-3">
                    <label for="last_name">Last name:</label>
                    <input type="text" name="last_name" class="form-control" id="last_name" required autocomplete="off">
                </div>

                <div class="form-group mt-3">
                    <label for="email">Email:</label>
                    <input type="email" name="email" class="form-control" id="email" required autocomplete="off">
                </div>

                <div class="form-group mt-3">
                    <label for="phone">Phone:</label>
                    <input type="tel" name="phone" class="form-control" id="phone" required autocomplete="off">
                </div>

                <hr>

                <input type="submit" value="Make Reservation" class="btn btn-primary">
            </form>
        </div>
    </div>

</div>
{{end}}